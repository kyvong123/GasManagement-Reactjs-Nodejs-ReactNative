
#GasCarrier {

    thead[class*="ant-table-thead"] th.ant-table-align-center {
        font-weight: normal;
    }

    thead[class*="ant-table-thead"] th {
        height: 50px;
    }


    .update-carrier-link{
        color:black;
    }

    .delete_icon {
        color:red;
        font-size: medium;
        font-weight: lighter;
    }

    .update_icon {
        color:green;
        font-size: medium;
        font-weight: lighter;
    }

    .view_icon {
        color:slateblue;
        font-size: medium;
        font-weight: lighter;
    }

    .changePass_icon {
        color:darkgoldenrod;
        font-size: medium;
        font-weight: lighter;
    }

    // .delete_link:hover{
    //     background-color: unset;
    // }

    // .update_link:hover{
    //     background-color: unset;
    // }

    // .view_link:hover{
    //     background-color: unset;
    // }

    .ant-form-explain{
        border: none;
        border-radius: 3px;
        color: #721c24 !important;
        background-color: #f8d7da;
        padding: 0.3rem 1.25rem;
        margin-bottom: 0px;
    }

    .code_input{
        margin-bottom:5px;
        margin-top: 15px;
    }

    .name_input{
        margin-bottom:5px;
    }

    .email_input{
        margin-bottom:5px;
    }

    .driverNumber_input{
        margin-bottom:5px;
    }

    .password_input{
        margin-bottom:5px;
    }

    .phone_input{
        margin-bottom:5px;
    }

    .form_avt {
        height: 191px;
        text-align: center;
    }

    .img_avt {
        height: 150px;
    }

    .avt_container {
        position: relative;
        width: 100%;
        height: 100%;
    }
    .avt_img {
        height:150px;
    }
    
    .avt_overlay {
        position: absolute;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        height: 100%;
        width: 100%;
        opacity: 0;
        transition: .3s ease;
        background-color: darkgray;
    }
    
    .avt_container:hover .overlay {
        opacity: 1;
    }
    
    .avt_icon {
        color: white;
        font-size: 100px;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        -ms-transform: translate(-50%, -50%);
        text-align: center;
        background-color: unset;
    }
    
    .fa-user:hover {
        color: #eee;
    }

    // .avt_input {
    //     text-align: center;
    //     margin: auto;
    //     height: 191px;
    //     margin-top: 5px;
    //     margin-bottom: 4px;
    // }

    .avt_input {
        text-align: -webkit-center;
        margin: 0;
        margin-top: 18px;
        margin-bottom: 11px;
        height: 262px;
        .div-image {
            //text-align: center;
            width: auto;
            height: 200px;
            img {
                height: 170px;
                width: revert;
            }
            .button-input {
                display: block;
                input {
                    //display: none;
                    opacity: 0;
                    position: absolute;
                    /* top: 218px; */
                    /* height: 60px; */
                    width: 90%;
                    left: 0;
                }
                button {
                    width: 90%;
                    font-family: Helvetica, sans-serif;
                    color: white;
                    border: none;
                    font-weight: bold;
                    cursor: pointer;
                    position: absolute;
                    left: 0;
                    right: 0;
                    margin: auto;
                }
            }
        }
    }
    .eye-show{
        position: absolute;
        right: 15px;
    }

    .eye-show-create {
        position: absolute;
        right: 30px;
        top: 5px;
    }

    .child_form {
        background: #fbfbfb;
        border: 1px solid #d9d9d9;
        border-radius: 5px;
        padding: 0px 10px 0px 10px;
    }
    
    #form_footer{
        width: 100%;
        margin: auto;
    }

    .modal-footer{
        border: none;
        padding-top: 0rem;
        padding-bottom: 0rem;
    }
}