#tuan__CSS {
  .region {
    width: 100%;
    label {
      margin-left: 2%;
    }
    select {
      border: 0.5px solid lightgray;
      border-radius: 5px;
      width: 16%;
      margin-left: 10px;
      outline: none;
    }
  }
  .ant-input-number-handler-wrap {
    display: none;
  }

  .item__middle {
    .ant-input-number {
      margin-left: 10px;
      width: 75%;
    }
  }

  .item__right {
    display: flex;
    white-space: nowrap;
    input {
      border: 0.5px solid lightgray;
      border-radius: 5px;
      outline: none;
      margin-left: 5px;
      height: 35px;
    }
  }

  .ant-input-number:hover {
    border-color: lightgray;
    border-right-width: 1px !important;
  }
  .ant-input-number:focus {
    border-color: lightgray;
    outline: none;
    border-right-width: 1px !important;
    box-shadow: 0 0 0 1px lightgray !important;
  }
  .ant-input-number-focused {
    box-shadow: 0 0 0 1px lightgray !important;
    outline: none;
    border: 0.5px solid lightgray;
  }

  .choose__detail-tank {
    width: 100%;
    padding-left: 15px;
    select {
      border: 0.5px solid lightgray;
      border-radius: 5px;
      width: 65%;
      margin-left: 15px;
      outline: none;
      height: 35px;
    }
    label {
      margin-left: 3%;
    }
    button {
      margin-left: 2%;
      width: 75%;
    }
    .detail__right {
      width: 100%;
      button {
        margin: 0 auto;
      }
    }
  }

  .ant-table-thead > tr:first-child > th {
    background-color: #009347 !important;
    color: #fff !important;
    border-right-color: #fff !important;
    border-right: 1px solid #e8e8e8;
    text-align: center;
    font-weight: 700;
  }

  .ant-table-thead > tr:first-child > th:first-child {
    width: 10%;
  }

  .ant-table-bordered .ant-table-thead > tr > th,
  .ant-table-bordered .ant-table-tbody > tr > td {
    text-align: center;
    font-weight: 400;
    padding-bottom: 12px;
    vertical-align: baseline;
  }
}
.ant-modal-content {
  .formUpdatePrice {
    border: 1px solid #cfcccc;
    .headerForm {
      border-bottom: 1px solid #cfcccc;
      h4{
        margin: 3%;
      }
    }
    .contentForm{
      padding: 2%;
      input{
        color: black;
      }
      .ant-input-number{
        width: 100%;
        .ant-input-number-handler-wrap{
          display: none;
        }
      }
    }
  }
}
