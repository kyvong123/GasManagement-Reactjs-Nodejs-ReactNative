#Customer {
  #input_value .ant-calendar-picker-input {
    color: black !important;
  }

  thead[class*="ant-table-thead"] th.ant-table-align-center {
    font-weight: normal;
  }

  thead[class*="ant-table-thead"] th {
    height: 50px;
    background-color: #009347 !important;
    color: #fff !important;
    border-right-color: #fff !important;
  }

  @media (min-width: 992px) {
    .modal-dialog {
      max-width: 70% !important;
    }
  }

  .delete-icon {
    color: red;
    font-size: medium;
    font-weight: lighter;
  }

  .update-icon {
    color: green;
    font-size: medium;
    font-weight: lighter;
  }

  .view-icon {
    color: slateblue;
    font-size: medium;
    font-weight: lighter;
  }

  .plan-icon {
    color: initial;
    font-size: medium;
    font-weight: lighter;
  }

  ._header {
    flex: auto;
    margin: 0px 16px 10px 16px;
    border-bottom: 1px solid #cbcbcb;
    text-align: center;
  }

  .__header {
    flex: auto;
    margin: 10px 16px 10px 16px;
    border-bottom: 1px solid #cbcbcb;
    text-align: center;
  }

  #form_body .ant-card {
    min-height: 461px;
    border: 1px solid #cfcccc;
  }

  #form_footer {
    width: 100%;
    margin: auto;
  }

  .footer_form {
    margin-top: 1rem;
    width: 100%;
    justify-content: center;
  }

  .ant-form-explain {
    border: none;
    border-radius: 3px;
    color: #721c24 !important;
    background-color: #f8d7da;
    padding: 0.3rem 1.25rem;
  }

  .search_btn {
    margin: 0 5px 0 5px;
    background-color: #faa64b;
    border-color: #faa64b;
  }

  .search_input {
    color: black;
    margin: 0px 5px;
  }

  #view-customer {
    // ._header h5{
    //     font-weight: bold !important;
    // }

    // #input_name {
    //   font-size: 13px;
    // }

    // #input_value{

    //     color:black;
    // }

    @media (max-width: 1200px) {
      .view-customer-table .ant-table {
        width: unset;
      }
    }
  }

  #create-plan {
    @media (max-width: 1200px) {
      .ant-table {
        width: unset;
      }
    }
  }

  @media (max-width: 1200px) {
    .ant-table-scroll .ant-table-body{ 
      overflow: hidden !important; 
      margin-bottom: 0px !important; 
    }
  }

  button.custom-btn { 
    border:none;
    background: none;
    margin-left: 12px;
  }

  button.custom-btn:focus {
    outline: none;
  }
}
